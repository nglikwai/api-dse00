<% layout('layouts/boilerplate')%>

    <style>
        .review-body {
            width: 600px;
            margin: 20px;
        }

        h3 {
            margin-bottom: 20px;
        }

        li {
            margin-top: 10px;
            font-size: 18px;
        }

        .user-info {
            margin: 20px 0 50px 0;
        }

        input {
            width: 100px
        }

        option {
            width: 100px;
        }
    </style>

    <button onclick="history.back()" id="backButton" class="btn dse00btn mb-3">Back</button>
    <h1 class="mt-3 mb-5">
        <%= user.username.toUpperCase() %>
    </h1>

    <% if (currentUser && currentUser.identity=='admin' ) { %>
        <form action="/admins/<%= user._id %>?_method=PUT" method="POST" class="mt-3">
            <select class="form-select" name="identity" style="font-size:12px;">
                <option value="admin" <%=user.identity==='admin' ? 'selected' : '' %>>Admin</option>
                <option value="leader" <%=user.identity==='leader' ? 'selected' : '' %>>Leader</option>
                <option value="member" <%=user.identity==='member' ? 'selected' : '' %> >Member</option>
            </select> ü™ô : <input type="number" name="coin">
            <button class="btn dse00btn2 ml-3" style="font-size:10px;">Confirm</button>
        </form>
        <% } %>



            <div class='index-loop'>

                <div>
                    <div class="userpage">
                        <p>
                            üí™üèª <%= user.intro %>

                                <% if (currentUser && currentUser.username==user.username) { %>
                                    <a href="/users/intro" class="btn dse00btn fr">Edit</a>
                                    <% } %>
                        </p>
                        <div class="mb-5 mt-5">
                            <span style="font-size: 20px;"> Grade : Lv.</span>
                            <span id="usergrade">
                                <%= user.grade %>
                            </span><br><br>

                            <h4> <a href="/users/dse00coin"> ü™ô : </a>
                                <span id="coin">
                                    <%= user.coin %>
                                </span>
                            </h4>
                        </div>
                        <hr>

                        <div class="mb-5 mt-5">
                            <h4>Posts</h4>
                            <% for(let post of user.posts){ %>
                                <li>
                                    <a href="/<%=post._id %> ">
                                        <%= post.title %>
                                    </a>

                                </li>
                                <% } %>

                                    <br>
                                    <hr>
                        </div>

                        <div id="reviews">
                            <% if (currentUser) { %>
                                <% if (currentUser.username==user.username || currentUser.identity=='admin' ) { %>


                                    <h4>Reviews</h4>
                                    <div class="muted" style="float:left">only you can view it</div><br><br>
                                    <% for(let review of user.reviews){ %>
                                        <% if (review.post) { %>
                                            <p>
                                                <a href="/<%= review.post %> ">
                                                    - <%= review.body %>
                                                </a>
                                            </p>
                                            <% }else{ %>
                                                <p>
                                                    <a href="/<%= review.post %> ">
                                                        - <%= review.body %>
                                                    </a>
                                                </p>
                                                <% }} %>
                                                    <% } %>
                                                        <% } %>

                        </div>
                    </div>
                </div>
            </div>