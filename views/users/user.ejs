<% layout('layouts/boilerplate')%>
    <button onclick="history.back()" id="backButton" class="btn dse00btn mb-3">Back</button>
    <h1 class="mt-3">
        <%= user.username.toUpperCase() %>
    </h1>
    <style>
        .review-body {
            width: 600px;
            margin: 20px;
        }
        
        h3 {
            margin-bottom: 20px;
        }
        
        li {
            margin-top: 10px;
            font-size: 18px;
        }
        
        .user-info {
            margin: 20px 0 50px 0;
        }
    </style>

    <div class='index-loop'>

        <div>
            <div class="userpage">
                <span style="font-size: 20px;"> Grade : Lv.</span>
                <span id="usergrade">
                    <%= user.grade %>
                </span><br><br>

                <h4> <a href="/users/dse00coin"> ðŸª™ : </a>
                    <span id="coin">
                        <%= user.coin %>
                    </span>
                </h4><br>
                <hr>



                <h4>Posts</h4>
                <% for(let post of user.posts){ %>
                    <li>
                        <a href="/<%=post._id %> ">
                            <%= post.title %>
                        </a>

                    </li>
                    <% } %>

                        <br>
                        <hr><br>



                        <% if (currentUser) { %>
                            <% if (currentUser.username == user.username || currentUser.identity == 'admin') { %>


                                <h4>Reviews</h4>
                                <div class="muted" style="float:left">only you can view it</div><br><br>
                                <% for(let review of user.reviews){ %>
                                    <% if (review.post) { %>
                                        <p>
                                            <a href="/<%= review.post %> ">
                                        - <%= review.body %>
                                    </a>
                                        </p>
                                        <% }else{ %>
                                            <p>
                                                <a href="/<%= review.post %> ">
                                            - <%= review.body %>
                                        </a>
                                            </p>
                                            <% }} %>
                                                <% }  %>
                                                    <% } %>


            </div>
        </div>
    </div>